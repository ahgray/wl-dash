{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "env": {
    "GROK_API_KEY": "@grok-api-key",
    "NFL_API_KEY": "@nfl-api-key",
    "ODDS_API_KEY": "@odds-api-key"
  },
  "functions": {
    "app/api/**/*.js": {
      "maxDuration": 30
    }
  },
  "regions": ["iad1"],
  "crons": [
    {
      "path": "/api/cache/refresh",
      "schedule": "0 */2 * * *"
    }
  ]
}